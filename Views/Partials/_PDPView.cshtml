@model LuxuryAndCo.OnlineShop.Models.PDPViewModel
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco

@{
var page = Umbraco.Content(1140);
var addToCartText = page?.Value<string>("addToCartButtonName") ?? "Add to Cart";
var cartMessage = page.Value<string>("cartMessage");
}

<div class="pdp-container">
    <div class="pdp-gallery">
        <div class="pdp-main-img">
            @if(Model.ImageUrls != null && Model.ImageUrls.Any())
            {
            <img id="mainProductImage" src="@Model.ImageUrls.First()" alt="@Model.Name" />
            }
            else
            {
            <img src="/path/to/placeholder.png" alt="No image available" />
            }
        </div>

        <div class="pdp-thumbs">
            @if(Model.ImageUrls != null && Model.ImageUrls.Any())
            {
                foreach (var img in Model.ImageUrls)
                {
                    <img class="thumb" src="@img" alt="@Model.Name thumbnail" onclick="changeMainImage(this)" />
                }
            }
        </div>

    </div>
    
    <div class="pdp-info">
        <h2 class="pdp-brand">@Model.Brand</h2>
        <h1 class="pdp-name">@Model.Name</h1>
        <p class="pdp-price">$@Model.Price.ToString("N0", new System.Globalization.CultureInfo("de-DE"))</p>
        <div class="pdp-description">@Html.Raw(Model.Description)</div>
        <button class="pdp-btn" onclick="addToCart('@Model.Brand', '@Model.Name')">
            @addToCartText
        </button>
    </div>
</div>

<script>
    function changeMainImage(thumb) {
        document.getElementById("mainProductImage").src = thumb.src;
    }
    function addToCart(brand, name) {
        alert(brand + ' - ' + name + ' @cartMessage');
    }
</script>

