@model LuxuryAndCo.OnlineShop.Models.ProductCardViewModel
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco

@{
    var page = Umbraco.Content(1140); 
    var addToCartText = page.Value<string>("addToCartButtonName");
    var moreInfoText = page.Value<string>("moreInformationsButtonName");
    var cartMessage = page.Value<string>("cartMessage");
    
}

<div class="border rounded-lg shadow-md p-6 bg-[#006039] text-white text-center flex flex-col">
    <img src="@Model.ImageUrl" alt="@Model.Name"
         class="w-full h-64 object-contain mb-4 mx-auto" />
    <h2 class="text-xl font-semibold mb-2">@Model.Brand - @Model.Name</h2>
    <p class="text-xl text-white mb-4">
        $@Model.Price.ToString("N0", new System.Globalization.CultureInfo("de-DE"))
    </p>
    
    <div class="flex justify-center space-x-4 mt-auto">
        <button onclick="addToCart('@Model.Brand', '@Model.Name')" 
                class="bg-black text-white px-4 py-1 rounded hover:bg-gray-800 h-10">
            @addToCartText
        </button>
        
        <a href="@(Model.PdpLink?.Url() ?? "#")"
            class="bg-black text-white px-4 py-1 rounded hover:bg-gray-800 h-10 flex items-center justify-center">
            @moreInfoText
        </a>

      
    </div>
</div>

<script>
    function addToCart(brand, name) {
        alert(brand + ' - ' + name + ' @cartMessage');
    }
</script>
