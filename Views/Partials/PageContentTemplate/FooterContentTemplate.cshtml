@model LuxuryAndCo.OnlineShop.Models.FooterContentViewModel

<div class="content-box">
    <header class="content-box-header">
        <h1>@Model.PageTitle</h1>
        <div class="underline"></div>
    </header>

    <div class="content-box-body">
        @foreach (var sec in Model.Sections)
        {
            @* Nur anzeigen, wenn ein Titel vorhanden ist *@
            @if (!string.IsNullOrWhiteSpace(sec.Title))
            {
                <h2>@sec.Title</h2>
            }
            <p>@Html.Raw(sec.Content.Replace("\n", "<br />"))</p>
        }

    </div>
    
</div>
<!-- Royal Fonts from Google -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=UnifrakturMaguntia&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Tangerine&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">

<style>
    /* Container Box */
    .content-box {
        max-width: 1250px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #006039; /* Rolex green */
        color: #eee;
        font-family: 'Cinzel', serif;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }
    
    /* Hover Effekt */
    .content-box:hover {
        transform: translateY(-15px) scale(1.05);
        box-shadow: 0 20px 30px rgba(0, 0, 0, 0.6);
    }

    /* Header und Unterstreichung */
    .content-box-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .content-box-header h1 {
        font-size: 3rem;
        color: #111111;
        letter-spacing: 2px;
        margin-bottom: 0.5rem;
    }

    .content-box-header .underline {
        width: 150px;
        height: 4px;
        background-color: #d4af37; /* Gold */
        margin: 0 auto;
        border-radius: 2px;
    }

    /* Body Content */
    .content-box-body h2 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        color: #111111;
        margin-bottom: 0.5rem;
        letter-spacing: 1px;
    }

    .content-box-body p {
        font-family: 'Cinzel', serif;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        color: #d4af37;
    }

    /* Optional: Links im Content */
    .content-box-body a {
        color: #d4af37;
        text-decoration: underline;
        transition: color 0.3s;
    }

    .content-box-body a:hover {
        color: #fff;
    }
</style>
