@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.WatchesPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
Layout = "master.cshtml";
}

<div class="container mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold mb-6 text-center">Luxury Watches</h1>
    <p class="text-gray-600 text-center mb-10">Explore our Rolex collection highlights</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">

        <!-- Rolex Day-Date -->
        <div class="border rounded-lg shadow-md p-6 bg-white text-center">
            <img src="/images/watches/Rolex_DayDate_gold_green.png"
                 alt="Rolex Day-Date"
                 class="w-full h-64 object-contain mb-4 mx-auto" />
            <h2 class="text-xl font-semibold mb-2">Rolex Day-Date</h2>
            <p class="text-gray-500 mb-4">$45,000</p>
            <button onclick="addToCart('Rolex Day-Date', 45000)"
                    class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800">
                Add to Cart
            </button>
        </div>

        <!-- Rolex Submariner Date -->
        <div class="border rounded-lg shadow-md p-6 bg-white text-center">
            <img src="/images/watches/Rolex_SubmarinerDate_silver_green.png"
                 alt="Rolex Submariner Date"
                 class="w-full h-64 object-contain mb-4 mx-auto" />
            <h2 class="text-xl font-semibold mb-2">Rolex Submariner Date</h2>
            <p class="text-gray-500 mb-4">$12,500</p>
            <button onclick="addToCart('Rolex Submariner Date', 12500)"
                    class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800">
                Add to Cart
            </button>
        </div>

    </div>
</div>

@section Scripts {
<script>
    function addToCart(product, price) {
        alert(product + " has been added to your cart for $" + price);
        // Later you can integrate with real cart logic
    }
</script>
}

