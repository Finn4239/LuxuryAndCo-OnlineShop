@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.WatchesPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "master.cshtml";
}

<div class="bg-cover bg-center min-h-screen" 
     style="background-image: url('/images/background/göttlich_goldener Hintergrund.jpg');">

    <div class="container mx-auto px-6 py-12 bg-white/80 rounded-lg shadow-lg">
        <h1 class="text-4xl font-extrabold mb-6 text-center text-yellow-900 drop-shadow">
            Luxury Watches
        </h1>
        <p class="text-lg text-gray-700 text-center mb-12">
            Discover our finest Rolex collection highlights
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            
            <!-- Rolex Day-Date -->
            <div class="border rounded-lg shadow-md p-6 bg-white/90">
                <img src="/images/watches/Rolex_DayDate_gold_green.png" 
                     alt="Rolex Day-Date"
                     class="w-full h-72 object-contain mb-6" />
                <h2 class="text-2xl font-semibold mb-2">Rolex Day-Date</h2>
                <p class="text-gray-600 mb-4">$45,000</p>
                <button onclick="addToCart('Rolex Day-Date', 45000)" 
                        class="bg-black text-white px-5 py-2 rounded hover:bg-gray-800 transition">
                    Add to Cart
                </button>
            </div>

            <!-- Rolex Submariner Date -->
            <div class="border rounded-lg shadow-md p-6 bg-white/90">
                <img src="/images/watches/Rolex_SubmarinerDate_silver_green.png" 
                     alt="Rolex Submariner Date"
                     class="w-full h-72 object-contain mb-6" />
                <h2 class="text-2xl font-semibold mb-2">Rolex Submariner Date</h2>
                <p class="text-gray-600 mb-4">$12,500</p>
                <button onclick="addToCart('Rolex Submariner Date', 12500)" 
                        class="bg-black text-white px-5 py-2 rounded hover:bg-gray-800 transition">
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Toast notification -->
<div id="toast" class="fixed bottom-5 right-5 bg-green-600 text-white px-6 py-3 rounded shadow-lg opacity-0 transition-opacity duration-500">
    ✅ Item added to cart!
</div>

@section Scripts {
    <script>
        function addToCart(product, price) {
            let toast = document.getElementById("toast");
            toast.textContent = product + " added to cart for $" + price;
            
            // Show toast
            toast.classList.remove("opacity-0");
            toast.classList.add("opacity-100");

            // Hide toast after 3 sec
            setTimeout(() => {
                toast.classList.remove("opacity-100");
                toast.classList.add("opacity-0");
            }, 3000);
        }
    </script>
}
